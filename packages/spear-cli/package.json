{
  "name": "@spearly/spear-cli",
  "version": "1.4.1",
  "type": "module",
  "description": "",
  "preferGlobal": true,
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/types.d.ts",
  "scripts": {
    "tsc": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "build": "npm run clean && npm run build:esm && npm run copy-files",
    "build:esm": "tsc -p ./src/tsconfig.esm.json",
    "dev": "nodemon --watch \".\" -e js,ts --exec \"npm run build\"",
    "copy-files": "npm-run-all copy-files:*",
    "copy-files:templates": "mkdir -p dist/templates && cp -R src/templates/* dist/templates/"
  },
  "bin": {
    "spear": "./dist/index.js"
  },
  "exports": {
    ".": "./dist/browser/InMemoryMagic.js",
    "./dist/plugins/*": "./dist/plugins/*",
    "./plugins/*": "./dist/plugins/*.js"
  },
  "keywords": [],
  "author": "Yo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unimal-jp/spear.git"
  },
  "bugs": {
    "url": "https://github.com/unimal-jp/spear/issues"
  },
  "dependencies": {
    "@spearly/cms-js-core": "1.0.16",
    "@types/live-server": "^1.2.1",
    "argparse": "^2.0.1",
    "chalk": "^5.2.0",
    "eslint": "^8.34.0",
    "fs-extra": "^11.1.0",
    "glob": "^8.0.3",
    "html-minifier-terser": "^7.0.0-beta.0",
    "live-server": "^1.1.0",
    "memfs": "^3.5.1",
    "mime-types": "^2.1.35",
    "node-html-parser": "^5.3.3",
    "node-watch": "^0.7.3",
    "sass": "^1.63.6",
    "sitemap": "^7.1.1",
    "yaml": "^2.2.1"
  },
  "devDependencies": {
    "@types/argparse": "^2.0.10",
    "@types/glob": "^7.2.0",
    "@types/html-minifier-terser": "^6.1.0",
    "@types/inquirer": "^8.2.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.7.4"
  }
}
