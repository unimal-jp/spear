{
  "name": "spear-cli",
  "version": "1.0.15",
  "type": "module",
  "description": "",
  "preferGlobal": true,
  "scripts": {
    "tsc": "tsc",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc --build src && npm run copy-files",
    "dev": "nodemon --watch \".\" -e js,ts --exec \"npm run build\"",
    "copy-files": "npm-run-all copy-files:*",
    "copy-files:templates": "mkdir -p dist/templates && cp -R src/templates/* dist/templates/"
  },
  "bin": {
    "spear": "./dist/index.js"
  },
  "keywords": [],
  "author": "Yo",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/unimal-jp/spear-cli.git"
  },
  "bugs": {
    "url": "https://github.com/unimal-jp/spear-cli/issues"
  },
  "dependencies": {
    "@types/live-server": "^1.2.1",
    "argparse": "^2.0.1",
    "chalk": "^5.0.1",
    "fs-extra": "^11.1.0",
    "glob": "^8.0.3",
    "gradient-string": "^2.0.1",
    "html-minifier-terser": "^7.0.0-beta.0",
    "inquirer": "^9.0.2",
    "live-server": "^1.2.2",
    "node-html-parser": "^5.3.3",
    "node-watch": "^0.7.3"
  },
  "devDependencies": {
    "@spearly/cms-js-core": "^0.0.0",
    "@types/argparse": "^2.0.10",
    "@types/glob": "^7.2.0",
    "@types/gradient-string": "^1.1.2",
    "@types/html-minifier-terser": "^6.1.0",
    "@types/inquirer": "^8.2.1",
    "@types/node": "^18.6.2",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.7.4"
  },
  "workspaces": [
    "packages/*"
  ]
}
